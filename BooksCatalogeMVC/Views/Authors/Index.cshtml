@using BooksCatalogeMVC.CustomHtlmHelpers
@model IEnumerable<DataAccessLayer.Models.Author>

@{
    ViewBag.Title = "Index";
}

<h2>All Authors</h2>

<p style="margin-bottom:5px">
    @Html.ActionLink("Create New", "Create", new { },new { @class = "btn btn-default btn_shadow" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model=>model.ImagePath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @if (item.ImagePath != null)
            {
                @Html.DisplayImage(Url.Content(item.ImagePath), "image-grid cover")
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID, }, new { @class = "btn btn-default btn_shadow" })
                @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-default btn_shadow" })
                @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-default btn_shadow" })
        </td>
    </tr>
}

</table>
